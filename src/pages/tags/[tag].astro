---
import BaseLayout from "../../layouts/BaseLayout.astro";

import BlogPostListItem from "../../components/BlogPostListItem.astro";

export async function getStaticPaths() {
    const allPosts = await Astro.glob('../posts/*.md');
    const distinctTags = [... new Set(allPosts.map(p => p.frontmatter.tags).flat())];
    return distinctTags.map(tag => {
        const filteredPosts = allPosts.filter(p => p.frontmatter.tags?.includes(tag));
        return {
            params: { tag: tag },
            props: { posts: filteredPosts }
        };
    })
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---
<BaseLayout pageTitle={tag}>
    <p>Posts tagged with {tag}</p>
    <ul>
        {posts.map(p => <BlogPostListItem url={p.url} title={p.frontmatter.title}/>)}
    </ul>
</BaseLayout>
